    function dateDealWith(date, addYear, addMonth, addDay) {
        var reDate = new Date(date);
        reDate.setFullYear(date.getFullYear() + addYear);
        reDate.setMonth(date.getMonth() + addMonth);
        reDate.setDate(date.getDate() + addDay);
        return reDate;
    }
    
